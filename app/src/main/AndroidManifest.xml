<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mycafe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.UpdateProfile" android:screenOrientation="portrait"  />
        <activity android:name=".Activity.Dashboard" android:screenOrientation="portrait" />
        <activity android:name=".Auth.SplashScreen" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.HomePage" android:screenOrientation="portrait"  />
        <activity android:name=".Auth.RegisterActivity" android:screenOrientation="portrait" />
        <activity android:name=".Auth.MainActivity" android:screenOrientation="portrait"  />
    </application>

</manifest>